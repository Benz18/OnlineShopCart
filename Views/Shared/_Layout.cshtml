        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <a class="navbar-brand" href="/">Olschool FPS</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <!-- <li class="nav-item active">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li> -->
                    <!-- <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li> -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/List">All</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/List/Doom"><img src="/img/logos/doom.png" class="grayscale" width="32" height="32" alt="Doom" /></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/List/Quake"><img src="/img/logos/quake.png" class="grayscale" width="32" height="32" alt="Quake" /></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/List/Unreal"><img src="/img/logos/unreal.png" class="grayscale" width="32" height="32" alt="Unreal" /></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/List/Half-Life"><img src="/img/logos/half-life.png" class="grayscale" width="32" height="32" alt="Half-Life" /></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/List/Counter-Strike"><img src="/img/logos/counter-strike.png" class="grayscale" width="32" height="32" alt="Counter-Strike" /></a>
