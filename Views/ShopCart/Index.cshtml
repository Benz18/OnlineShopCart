@model ShopCartViewModel

<div class="container">
    @foreach (var el in Model.shopCart.listShopItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Game:</b> @el.product.Name <br />
            <b>Price:</b> @el.product.Price.ToString("c") <br />
        </div>
    }
    <hr />
    <a class="btn btn-danger" asp-controller = "Order" asp-action="Checkout">Checkout</a>
</div>
